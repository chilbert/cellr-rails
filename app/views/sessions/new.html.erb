<div class="container">
  <h3 class="mb-3 mt-3">Login to your Cellr.</h3>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-3' %>

      <%= f.submit "Log in", class: "btn btn-secondary" %>
    <% end %>

    <%= link_to 'Login with Facebook!', '/auth/facebook', class: "btn btn-secondary mt-3" %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
