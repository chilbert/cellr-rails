<div class="container">
  <h1 class="mt-3">Viewing all Bottles in your collection</h1>
      <% @bottles.each do |b| %>
      <div class="card mt-5">
        <div class="card-body">
        <h3><%= link_to b.title, user_bottle_path(current_user.id, b.id) %></h3>
        <h5>Type: <%= b.wine_type %></h5>
        <p>Variety: <%= b.grape_variety %></p>
        <p>Vintage: <%= b.vintage %></p>
        <p>Winery: <%= b.winery.name %></p>
        <p>Price: $<%= b.price %></p>

        <ul>
          <p>Comments you have made on this bottle:</p>
          <li>
          <%= b.comments.all %>
        </li>
        </ul>
    </div>
  </div>
  <% end %>
</div>
