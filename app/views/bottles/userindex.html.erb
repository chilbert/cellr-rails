<div class="container">
  <h1 class="mt-3">Your Cellr's collection of Wine by the Bottle.</h1>
  <% @bottles.each do |b| %>
    <div class="card mt-5">
      <div class="card-body">
      <h3><%= link_to b.title, user_bottle_path(current_user.id, b.id) %></h3>
      <h5>Type: <%= b.wine_type %></h5>
      <p>Variety: <%= b.grape_variety %></p>
      <p>Vintage: <%= b.vintage %></p>
      <p>Winery: <%= link_to b.winery.name, winery_path(b.winery_id) %></p>
    </div>
  </div>
  Need to add a delete link here to remove from BottlePrice table
  <% end %>



</div>
