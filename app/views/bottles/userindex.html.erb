<div class="container">
  <h1 class="mt-3">Your Cellr's collection of Wine by the Bottle.</h1>
  <h4>You have <%= @bottle_price.count %> bottles of wine in your Cellr.</h4>
  <h5>Your Cellr is worth $<%=current_user.cellr_value %>0 dollars.</h5>
  <p>** The average vintage in your Cellr is <%= current_user.vintage_average %>.</p>
  <% @bottle_price.each do |b| %>
    <div class="card mt-5">
      <div class="card-body">
      <h3><%= link_to b.bottle.title, user_bottle_path(current_user.id, b.id) %></h3>
      <h5>Type: <%= b.bottle.wine_type %></h5>
      <p>Variety: <%= b.bottle.grape_variety %></p>
      <p>Vintage: <%= b.bottle.vintage %></p>
      <p>Winery: <%= link_to b.bottle.winery.name, winery_path(b.bottle.winery_id) %></p>
      <p>Price: $<%= b.price.round(2) %>0</p>
    </div>
  </div>
  <%= link_to 'I drank this...', user_bottle_bottle_price_path(current_user.id, b.bottle.id, b.id), method: :delete, data: { confirm: 'Did you really drink this??' }%>
  <% end %>



</div>
