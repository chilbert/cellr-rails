<div class="container">
    <h3 class="mt-3 mb-2"><%= @bottle.title %></h3>
    <%= link_to 'Edit Wine', edit_bottle_path(@bottle.id), class: 'btn btn-secondary' %>
  <div class="card mt-5">
    <div class="card-body">
    <h5>Type: <%= @bottle.wine_type %></h5>
    <p>Variety: <%= @bottle.grape_variety %></p>
    <p>Vintage: <%= @bottle.vintage %></p>
    <button type="button" name="button" class="winery-show btn btn-info mt-2 mb-3" data-id="<%=@bottle.id%>">Show Winery</button>
    <div class="winery">

    </div>
  </div>
</div>

</div>


<script type="text/javascript">

  $(function () {
    $(".winery-show").on("click", function (event) {
      event.preventDefault()
      let $winerybutton = $(".winery");
      $winerybutton.html('');
      var wineryID = parseInt($(".winery-show").attr("data-id"));
      $.get("/bottles/" + wineryID + ".json", function(data) {
          $winerybutton.append('<p>' + '<em>' + data["winery"].name + '</em>' + '</p>')
      });
    });
  });

</script>
